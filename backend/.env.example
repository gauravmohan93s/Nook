# Backend Configuration

# Database
DATABASE_URL=sqlite:///./nook.db

# API Keys
GEMINI_API_KEY=your_gemini_key_here
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_key_here

# Auth
AUTH_GOOGLE_ID=your_google_client_id
AUTH_GOOGLE_SECRET=your_google_client_secret

# Payments (Razorpay for India)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# App Settings
API_BASE_URL=http://localhost:8080
CACHE_TTL_SECONDS=3600
ALLOWED_ORIGINS=http://localhost:3000
ALLOW_PRIVATE_NETWORK=false
MAX_IMAGE_BYTES=5242880
ENABLE_LEGACY_TTS=false
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MODEL_FALLBACK=gemini-1.5-flash
GEMINI_MODELS_SEEKER=gemini-2.5-flash-lite,gemini-1.5-flash
GEMINI_MODELS_SCHOLAR=gemini-2.5-flash,gemini-2.0-flash
GEMINI_MODELS_INSIDER=gemini-2.5-flash,gemini-2.0-flash,gemini-1.5-flash
SUMMARY_PROVIDER_ORDER=gemini,openrouter,groq,qubrid
SUMMARY_PROVIDER_TIMEOUT=12
OPENROUTER_API_KEY=
OPENROUTER_MODEL=google/gemini-2.0-flash-001
OPENROUTER_MODEL_FALLBACK=
OPENROUTER_MODELS=google/gemini-2.0-flash-001,openai/gpt-oss-20b
OPENROUTER_SITE_URL=
OPENROUTER_APP_NAME=
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_MODEL_FALLBACK=
GROQ_MODELS=llama-3.1-70b-versatile,llama-3.1-8b-instant
QUBRID_API_KEY=
QUBRID_API_BASE=https://platform.qubrid.com/api/v1/qubridai/chat/completions
QUBRID_MODEL=openai/gpt-oss-120b
QUBRID_MODEL_FALLBACK=
QUBRID_MODELS=openai/gpt-oss-120b,openai/gpt-oss-20b,mistralai/Mistral-7B-Instruct-v0.3
QUBRID_AUTH_HEADER=Authorization
QUBRID_AUTH_VALUE=

# Logging
LOG_LEVEL=INFO
LOG_FILE=nook_app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Rate Limits
RATE_LIMIT_UNLOCK_PER_MINUTE=30
RATE_LIMIT_SUMMARIZE_PER_MINUTE=10

# Sentry
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.0
